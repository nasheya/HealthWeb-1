extends layout
block content
	script(src="http://maps.googleapis.com/maps/api/js")
	script(src='../js/mapScript.js')

	// Banner place to change image
	.banner(style='background-image: url(../images/banner/food3.jpg);')
		.banner_text Food Services
	.container
		.sub_text
			p.lead Food services to fit all your needs
	hr

	.container-fluid
		.row
			.col-md-5
				each item, i in foodlist
					.panel.panel-default
						.panel-heading.collapse-button
							h3.panel-title=item.name
						.panel-body.panel-collapse.collapse
							table.table.table-responsive.table-hover
								tbody
									tr
										td.details-control
											h5 Email: 
											p=item.email
											h5 Number:
											p=item.number
											h5 Location: 
											p.location=item.location
											h5 Website: 
											p=item.website
											if user
												.row
													.col-md-2
													.col-md-3
														a(href="/delete/Food/#{item.id}")
															.btn.btn-danger Delete post
													.col-md-3
													.col-m3-3
														a(href="/edit/Food/#{item.id}")
															.btn.btn-info Edit post
			.col-md-7
				#mapholder(style="width:100%;height:600px;")